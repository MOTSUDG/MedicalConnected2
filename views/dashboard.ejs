    <script>
        temp = document.getElementById('tempSensor')
        spo2 = document.getElementById('spo2Sensor')
        air = document.getElementById('airSensor')

        const TempisCheck = async(checked) => {
            const data = {
                state: checked
            };
            await fetch("http://localhost:3000/temperatura/estado", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(data)
            })
            .catch((error) =>
                console.log(error));
        }

        const Spo2isCheck = async(checked) =>{
            const data = {
                state: checked
            };
            await fetch("http://localhost:3000/spo2/estado", {
                method: "POST", 
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify(data)
            })
            .catch((error) =>
                console.log(error));
        }

        const AirisCheck = async(checked) =>{
            const data = {
                state: checked
            };
            await fetch("http://localhost:3000/air/estado", {
                method: "POST", 
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify(data)
            })
            .catch((error) =>
                console.log(error));
        }

        function starting(){
            TempisCheck(false) 
            Spo2isCheck(false)
            AirisCheck(false)
        }

        temp.addEventListener('change', function () {
            TempisCheck(this.checked)
        })

        spo2.addEventListener('change', function () {
            Spo2isCheck(this.checked)
        })

        air.addEventListener('change', function () {
            AirisCheck(this.checked)
        })

    </script>
